@model CalcularModel

<!DOCTYPE html>

<div class="container">
    <div class="row">
        <div>
            @*<partial name="_MenuManager" />*@
        </div>
    </div>
    <div class="row">
        @*<input type="hidden" asp-for="Calculo.Calculo">
