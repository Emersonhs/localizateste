            <div class="form-group col-lg-8">
                <label asp-for="PageCalculo.StrPrimos"></label>
                <input asp-for="PageCalculo.StrPrimos" class="le-input form-control-lg" readonly="readonly" />
            </div>
            <div class="row"></div>
            <div class="buttons-holder">
                <button type="submit" class="le-button huge">Calcular</button>
            </div>

        </form>
    </div>
</div>